{
  "项目配置": {
    "技术栈": {
      "后端": "Java 25 + Spring Boot 3.2+ + Maven",
      "持久层": "MyBatis 3.5+ + MyBatis-Spring",
      "数据库": "PostgreSQL 16+",
      "前端": "React 18 + Vite",
      "API规范": "RESTful API + Swagger/OpenAPI 3.0"
    },
    "代码规范": {
      "Java": "遵循Google Java Style，使用Lombok减少样板代码",
      "React": "使用函数组件和Hooks，TypeScript严格模式",
      "命名": {
        "后端": "包名：com.upper6.studentcourse，Controller后缀，Service后缀，Mapper后缀",
        "前端": "组件使用PascalCase，文件使用kebab-case"
      }
    }
  },
  "架构约束": {
    "分层架构": "Controller -> Service -> Mapper -> Model",
    "包结构": {
      "后端": [
        "controller: REST接口",
        "service: 业务逻辑层",
        "mapper: 数据访问层",
        "model: 实体类和DTO",
        "config: 配置类",
        "exception: 异常处理",
        "util: 工具类"
      ],
      "前端": [
        "src/api: API调用",
        "src/components: 公共组件",
        "src/pages: 页面组件",
        "src/utils: 工具函数",
        "src/types: TypeScript类型定义"
      ]
    },
    "数据库设计": {
      "命名": "表名小写_下划线，字段小写_下划线",
      "约束": "必须包含主键、外键约束、索引优化",
      "审计字段": "每张表包含created_at, updated_at"
    }
  },
  "开发要求": {
    "后端要求": [
      "所有Controller添加@RestController和@RequestMapping",
      "Service使用@Service注解，事务管理@Transactional",
      "使用MyBatis注解和XML映射两种方式",
      "统一响应格式：{code, message, data, timestamp}",
      "全局异常处理@ControllerAdvice",
      "参数校验使用@Validated",
      "API文档使用SpringDoc OpenAPI"
    ],
    "前端要求": [
      "使用React Router v6进行路由管理",
      "状态管理使用React Context或Zustand（不强制Redux）",
      "API请求使用axios，统一拦截器处理",
      "组件按功能拆分，保持单一职责",
      "使用Ant Design组件库",
      "重要操作需要确认提示",
      "表单验证使用antd Form + yup"
    ],
    "安全要求": [
      "密码加密存储（BCrypt）",
      "JWT token认证",
      "API权限控制@PreAuthorize",
      "防止SQL注入（MyBatis参数化查询）",
      "XSS防护"
    ]
  },
  "测试要求": {
    "单元测试": "JUnit 5 + Mockito",
    "集成测试": "Spring Boot Test + Testcontainers",
    "覆盖率": "核心业务逻辑>80%"
  },
  "数据库初始脚本": {
    "要求": "创建init.sql，包含表结构、初始数据、索引"
  },
  "部署配置": {
    "Docker": "提供Dockerfile和docker-compose.yml",
    "环境变量": "使用application.yml多环境配置"
  },
  "代码生成提示": "当生成代码时，优先考虑代码的可读性、可维护性和性能，添加必要的注释说明业务逻辑"
}